extends ../layout

block content
    h1 Cadastro de Usuario
    hr
    br
    //- if messages.erro
    //-     div(class="alert alert-danger")
    //-         each msg in messages.erro
    //-             b=msg
    //-         br
    //-     br      
    form(method="POST",action="/usuario/create",role="form")
        div(class="form-group")
            label Nome
            input(type="text", class="form-control",name="nome",value="#{user.nome || ''}", palceholder="Nome", autofocus, required)
        div(class="form-group")
            label Email
            input(type="email", class="form-control",name="email",value="#{user.email || ''}", palceholder="E-mail",required)
        div(class="form-group")
            label Site
            input(type="text", class="form-control",name="site",value="#{user.site || 'http://'}", palceholder="Site")
        div(class="form-group")
            label Senha
            input(type="password", class="form-control",name="password", palceholder="Senha",required)
        div(class="form-group")
            label Confirmar Senha
            input(type="password", class="form-control",name="password_confirmar", palceholder="Confirmar Senha",required)

        button(type="submit", class="btn btn-success") Salvar