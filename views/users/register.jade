extends ../layout

block content
    div(class="container")
        h3(class="lighter mt-4") Cadastrar professor

        div(class="row")
            div(class="col-md-12")
                form(method="POST",role="form")
                    div(class="form-group")
                        label Nome:
                        input(type="text", class="form-control",name="name", placeholder="Digite o nome...", autofocus, required)
                    div(class="form-group")
                        label Instituição:
                        input(type="text", class="form-control",name="organization", placeholder="Digite a instituição...", autofocus, required)
                    div(class="form-group")
                        label Email:
                        input(type="email", class="form-control",name="email", placeholder="Digite o e-mail...", required)
                    div(class="form-group")
                        label Senha:
                        input(type="password", class="form-control",name="password", placeholder="Digite a senha...", required)

                    input(type="hidden" name="level" value="2")

                    button(type="submit", class="btn btn-sm btn-primary") Cadastrar