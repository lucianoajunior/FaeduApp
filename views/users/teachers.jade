extends ../layout

block content

    div(class="container")
        div(class="row")
            div(class="col-md-6")
                h3(class="lighter mt-4") Professores

                p(class="mt-2")
                    b Total de registros: 
                    span #{ users.length } registro(s)
            div(class="col-md-6")
                form(class="mt-4 d-inline")
                    input(type="text" class="form-control" placeholder="Digite aqui a sua pesquisa...")
                    button(class="btn btn-sm btn-primary") Buscar

        if users.length > 0
            table(class="table table-striped")
                thead
                    tr
                        th Nome
                        th Instituição
                        th Ações
                tbody
                    each user in users
                        tr
                            td #{user.name}
                            td #{user.organization}
                            td 
                                a(href="/admin/professores/visualizar/#{user._id}", class="btn btn-sm btn-primary mr-1") Visualizar
        else
            p Nenhum registro encontrado!